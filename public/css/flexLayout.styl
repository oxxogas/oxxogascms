@import 'nib'

html
	min-height 			100%
	min-width 			100%
	max-width 			100%
	display 			flex

body
	display 			flex
	flex 				1
	flex-direction 		column
	margin 				0
	
	header
		display 			flex
		flex 				1
		justify-content 	flex-start
		align-items 		center
		padding-left		1%
		color				#fff
		background-color 	#EE2D24
		background-size		4em
		background-position	99% 50%
		background-repeat	no-repeat
		background-image 	url("http://oxxogas.com/imagenes/logo.svg")
		padding-right		6em
		transition			0.3s
		box-shadow			0 0 0.3em #000
		
		&:hover
			box-shadow			0 0 0.6em #000
		
		nav
			flex				1
			text-align 			center
			margin				1em
			border-radius		0.5em
			cursor				pointer
			transition			0.3s
			box-shadow			0 0.1em 0.1em #777 , inset 0 0 0.1em #777

			&:hover
				box-shadow			0 0.1em 0.3em #555 , inset 0 0 0.1em #777
				background-color	rgba(255,255,255,0.1)

	section
		display 			flex
		flex 				10
		justify-content 	center
		align-items 		center
		flex-direction		column
		
		.hidden
			display			none

		article
			display 			flex
			flex-direction		column
			justify-content 	center
			align-items 		center
			background-color 	#fff
			padding				1em
			margin				1em
			box-shadow			0 0.1em 0.1em #777 , inset 0 0 0.1em #777
			border-radius		0.5em
			transition			all 0.3s
			
			&:hover
				box-shadow			0 0.2em 0.3em #555 , inset 0 0 0.1em #777